<% layout('/layouts/boilerplate') %>
<div class="row mt-3">
  <div class="col-8 offset-2"></div>
  <h3>Edit your Listing</h3>

  <form action="/listings/<%= listing._id %>?_method=PUT" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
    
    <!-- Title Field -->
    <div class="mb-3">
      <label for="title" class="form-label mb-1">Title</label>
      <input
        type="text"
        id="title"
        name="listing[title]"
        value="<%= listing.title %>"
        placeholder="Enter listing title"
        required
        class="form-control" >
      <div class="valid-feedback">Title looks good!</div>
      <div class="invalid-feedback">Please provide a title.</div>
    </div>  
   
<div class="mb-2">
  Original Listing Image <br>
 <img src="<%= originalImageUrl %>">
</div>

<!-- Image Link Field -->
<div class="mb-2">
  <label for="imageUrl" class="form-label mb-1">Upload New Image </label>
  <input type="file" id="imageUrl" name="image" class="form-control">

</div>

    <!-- Description Field -->
    <div class="mb-3">
      <label for="listing-description" class="form-label mb-1">Description</label>
      <textarea
        id="listing-description"
        name="listing[description]"
        placeholder="Describe your listing"
        required
        class="form-control"
        rows="4"
      ><%= listing.description %></textarea>
      <div class="valid-feedback">Description looks great!</div>
      <div class="invalid-feedback">Please provide a description.</div>
    </div>
<div class="row">
     <!-- Price Field -->
    <div class="mb-3 col-md-4">
      <label for="listing-price" class="form-label mb-1">Price</label>
      <input
        type="number"
        id="listing-price"
        name="listing[price]"
        value="<%= listing.price %>"
        placeholder="Set price in INR"
        required
        class="form-control"
      >
      <div class="valid-feedback">Price is set!</div>
      <div class="invalid-feedback">Please provide a price.</div>
    </div>
    <!-- Country Field -->
    <div class="mb-3 col-md-8">
      <label for="listing-country" class="form-label mb-1">Country</label>
      <input
        type="text"
        id="listing-country"
        name="listing[country]"
        value="<%= listing.country %>"
        placeholder="Enter country name"
        required
        class="form-control"
      >
      <div class="valid-feedback">Country is set!</div>
      <div class="invalid-feedback">Please provide a country.</div>
    </div>
</div>
   

    <!-- Location Field -->
    <div class="mb-3">
      <label for="listing-location" class="form-label mb-1">Location</label>
      <input
        type="text"
        id="listing-location"
        name="listing[location]"
        value="<%= listing.location %>"
        placeholder="City or locality name"
        required
        class="form-control"
      >
      <div class="valid-feedback">Location is set!</div>
      <div class="invalid-feedback">Please provide a location.</div>
    </div>

    <!-- Submit Button -->
    <button type="submit" class="btn btn-dark edit-btn mt-3">Update Listing</button>
  </form>
</div>




